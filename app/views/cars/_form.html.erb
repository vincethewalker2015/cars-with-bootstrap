<div class="">
    <%= form_for @car do |f| %>
    <p>
        <%= f.label :make %> <br />
        <%= f.text_field :make, class: "" %>
    </p>
    
    <p>
        <%= f.label :model %> <br />
        <%= f.text_field :name, class: "" %>
    </p>
    
    <p>
        <%= f.label :price %> <br />
        <%= f.text_field :price, class: "" %>
    </p>
    
    <p>
        <%= f.label :description %> <br />
        <%= f.text_area :description, class: "" %>
    </p>
    
    <p>
        <%= f.label :picture %> <br />
        <%= f.file_field :picture, class: "" %>
    </p>
    
    <p>
        <%= f.submit  %>
    </p>

<% end %>
</div>

