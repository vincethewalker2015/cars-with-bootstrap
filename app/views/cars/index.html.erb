<div class="container">
    <div align="center">
        <h2 class="page-title">CarBar list</h2>
    </div>
</div>
<div class="container">
   <div class="row">
        <div align="center">                 
        <%= render 'layouts/flash' %>
        <table class="table">
           <thead>
                <tr>
                <!-- <th scope="col"><span class="hide">Money</span></th> -->
                <th scope="col">Make</th>
                <th scope="col">Image</th>
                <th scope="col">Model</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
            </tr>
           </thead>
            <% @cars.each do |car| %>
                <tr class="well well-green <%= cycle('', 'well-white') %>"
                    <th scope="row car-block">
                            <td class="show-text"><%= car.make %></td>
                            <td ><%= image_tag(car.picture_url, :size => "50px", class: "pic") if car.picture? %></td>
                            <td><%=link_to car.name, car_path(car), class: "make" %></td>
                            <td>Â£ <%= car.price %></td>
                            <td><%= car.description %></td>
                            <td><%= link_to "View", car_path(car), class: "btn btn-primary index-button" %></td>
                    </th>
                </tr>
            <% end %>
            
          
        </table>
    </div>
     
   </div>
    
</div>
